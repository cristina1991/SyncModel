@model IEnumerable<SyncModel.Data.Models.File>

@{
    ViewBag.Title = "Index";
}

<h2>@User.Identity.Name</h2>

<p>
    @Html.ActionLink("Incarca Fisier", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
