@model SyncModel.Data.Models.File

@{
    ViewBag.Title = "Edit";
}


<div class="row">
<div class="col-md-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Edit File Details</legend>

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.FileName)
                @Html.EditorFor(model => model.FileName,new { @class= "form-control"})
                @Html.ValidationMessageFor(model => model.FileName)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Data)
                @Html.DisplayFor(model => model.Data)
                @Html.ValidationMessageFor(model => model.Data)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            @Html.HiddenFor(model => model.FileContent)
            @Html.HiddenFor(model => model.FileType)
            <p>
                <button type="submit" class="btn btn-primary btn-lg">Save</button>|
                @Html.ActionLink("Back to Files", "Index")
            </p>
        </fieldset>
    }
</div>
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
